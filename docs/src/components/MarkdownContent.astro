---
import { Aside } from '@astrojs/starlight/components'
import Default from '@astrojs/starlight/components/MarkdownContent.astro'

const { id } = Astro.locals.starlightRoute

const isTestContent = id.startsWith('tests/')
---

{
  isTestContent ? (
    <Default>
      <Aside>
        This page exists solely for testing purposes and contains no useful information. See the Starlight Auto Sidebar
        plugin <a href="/docs/getting-started/">documentation</a> for more information.
      </Aside>
    </Default>
  ) : (
    <Default>
      <slot />
    </Default>
  )
}
